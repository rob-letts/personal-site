---
import BandcampIcon from '@icons/BandcampIcon.astro';
import GitHubIcon from '@icons/GitHubIcon.astro';
import LinkedinIcon from '@icons/LinkedinIcon.astro';
import LetterboxdIcon from '@icons/LetterboxdIcon.astro';
import DocumentIcon from '@icons/DocumentIcon.astro';
import CodepenIcon from '@icons/CodepenIcon.astro';

type AstroComponent = (_props: Record<string, any>) => any;
type Link = { href: string, icon: AstroComponent }

const links: Link[] = [
  { href: `https://github.com/rob-letts`, icon: GitHubIcon },
  { href: `https://www.Ã¥linkedin.com/in/robertletts/`, icon: LinkedinIcon },
  { href: `/RobLettsCV.pdf`, icon: DocumentIcon },
  { href: `https://letterboxd.com/robletts/films/diary/`, icon: LetterboxdIcon },
  { href: `https://bandcamp.com/robletts`, icon: BandcampIcon },
  { href: `https://codepen.io/rob-letts`, icon: CodepenIcon }
]
---
<aside>
  <ul class="icon-list">
    {
      links.map(link => (
        <li>
          <a
            href={ link.href }
            target="_blank"
          >
            <link.icon />
          </a>
        </li>
      ))
    }
  </ul>
</aside>